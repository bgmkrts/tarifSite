<%= render 'shared/errors', obj: @chef %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
        <%= form_for @chef do |f| %>
            <%= f.label :Şef_Adi %>
            <%= f.text_field :chefname %>
            
            <%= f.label :email %>
            <%= f.email_field :email %>
            
            <%= f.label :Sifre %>
            <%= f.password_field :password %>
            
            
            <%= f.submit(@chef.new_record? ? 'Kayıt' : 'Edit profile', class: "btn btn-success") %>
        <% end %>          
    </div>
</div>